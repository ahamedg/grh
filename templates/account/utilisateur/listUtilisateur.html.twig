{% extends 'base.html.twig' %}
{% block  breadcrumb %}
    <li class="breadcrumb-item active">
        Liste des utilisateurs
    </li>
{% endblock %}
{% block body_inside %}
    <div class="container">
        {% include 'account/accountUserPills.html.twig' %}<br>
        <div class="form-group">
            <a href="{{ path('utilisateur_new') }}" class="">
                <button type="button" class="btn btn-info btn-sm float-right" href="{{ path('utilisateur_new') }}"> Cr√©er un utilisateur</button>
            </a>
        </div>
        <h3>Liste des utilisateurs</h3>
        <hr style="margin-top: auto; color: black">
        <table class="table table-bordered table-hover">
            <thead class="bg-gradient-secondary">
            <tr>
                {#                <th style="width: 3%"></th>#}
                <th style="width: 15%" class="text-center">Photo de profil</th>
                <th style="width: 20%" class="text-center">Nom d'utilisateur</th>
                <th style="width: 40%" class="text-center">Contacts et Adresse</th>
                <th style="width: 4%" class="text-center">Etat</th>
                <th style="width: 20%" class="text-center">Action</th>
            </tr>
            </thead>
            <tbody>
            {% for u in listUtilisateur %}
                <tr>
                    {#                    <td>#}
                    {#                        <input type="checkbox" class="form-check-input" value="">#}
                    {#                    </td>#}
                    <td>
                        <img src="{{ asset('admin-lte/dist/img/manager.png') }}" alt="Photo de profil"
                             width="100%" class="center-block">
                    </td>
                    <td>{{ u.username }}</td>
                    <td style="line-height: 100%;">
                        <p>
                            <span style="text-decoration: underline;line-height: 50%;"><strong>Contacts:</strong></span>
                        </p>
                        <p style="line-height: 3%;">
                            <span style="text-decoration: underline;margin: 15px;">Tel :</span>
                            {{ u.telephone1Utilisateur }} / {{ u.telephone2Utilisateur }}<br>
                        </p>
                        <p>
                            <span style="text-decoration: underline;margin: 15px;">Email :</span>
                            {{ u.emailCompte }}
                        </p>
                        <p>
								<span style="text-decoration: underline;">
									<strong>Adresse:</strong><br>
									{{ u.adresseUtilisateur }}
								</span>
                        </p>
                    </td>
                    <td class="text-center">
                        {% if u.actif==true %}
                            <i id="etatActif" class="far fa-check-circle" style="font-size:20px;color:green" title="Utilisateur actif"></i>
                        {% else %}
                            {# <i id="etatInactif" class="btn-success fas fa-check-circle" style="width: 50%"></i> #}
                            <i id="etatInactif" class="far fa-times-circle" style="font-size:20px;color:red" title="Utilisateur inactif"></i>
                        {% endif %}
                    </td>
                    <td>
                        <a href="{{ path('utilisateur_edit', {'id': u.id}) }}">
                            <i id="btnEdit" title="Modifier un utilisateur" class="far fa-edit"
                               style="font-size:16px;"></i>
                        </a>
                        &#160;&#160;
                        <i class="fas fa-list-alt"></i>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
