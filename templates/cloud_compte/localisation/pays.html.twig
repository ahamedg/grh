{% extends 'base.html.twig' %}
{% block title %}
    pro6- GRH / Pays
{% endblock %}
{% block  breadcrumb %}
    <li class="breadcrumb-item active"> Pays</li>
{% endblock %}
{% block body_inside %}
    <div class="container">
        {% include 'cloud_compte/pills/localisationPills.html.twig' %}
        <br/>
        <div class="row">
            <div class="col-md-9">
                <div class="card card-secondary">
                    <div class="card-header">
                        Les différents pays
                    </div>
                    {% set myVal = 0 %}
                    <div class="card-body">
                        <table id="datableList" class="table table-bordered table-hover">
                            <thead>
                            <tr>
                                <th style="width: 3%">N°</th>
                                <th style="width: 10%">Indicatif</th>
                                <th style="width: 50%">Nom du pays</th>
                                <th style="width: 7%">Action</th>
                            </tr>
                            </thead>
                            <tbody>

                            {% for p in mapPays %}
                                {% set myVal = myVal + 1 %}
                                <tr>
                                    <td>{{ myVal }}</td>
                                    <td>{{ p.indicatifPays }}</td>
                                    <td>{{ p.nomPays }}</td>
                                    <td>
                                        <i id="btnEdit" data-toggle="modal" data-target="#editPaysModal" class="btn-default fa fa-edit"></i>
                                        &#160;&#160;
                                        <i class="fas fa-list-alt"></i>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table><br>
                        <div class="navigation">
                            {{ knp_pagination_render(mapPays) }}
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3"></div>
        </div>
    </div>

{% endblock %}
