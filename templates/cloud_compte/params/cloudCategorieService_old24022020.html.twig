{% extends 'base.html.twig' %}
{% block title %}
    pro6- GRH / Catégorie service
{% endblock %}
{% block  breadcrumb %}
    <li class="breadcrumb-item active">
        Catégorie service
    </li>
{% endblock %}
{% block body_inside %}
    <div class="container">
        {% include 'cloud_compte/pills/paramComptePills.html.twig' %}<br/>
        <div class="row">
            <div class="col-md-4">
                <div class="card card-success">
                    <div class="card-header">
                        Nouveau
                    </div>
                    <div class="card-body">
                        {{ form_start(form) }}

                        {{ form_widget(form) }}
                        <button type="submit" class="btn btn-success btn-sm float-right">Enregistrer
                        </button>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
            <div class="col-md-8">
                <div class="card card-secondary">
                    <div class="card-header">
                        Les différentes catégories de service
                    </div>
                    <div class="card-body">
                        {% if listCloudCategorieService %}
                            <table class="table table-bordered table-hover">
                                <thead>
                                <tr>
                                    <th style="width: 3%">N°</th>
                                    <th style="width: 40%">Libellé</th>
                                    <th style="width: 30%">Description</th>
                                    <th style="width: 7%">Action</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for cs in listCloudCategorieService %}
                                    <tr>
                                        <td>{{ num }}</td>
                                        <td>{{ cs.libelle }}</td>
                                        <td>{{ cs.description }}</td>
                                        <td>
                                            {# <a class="waves-effect waves-light btn modal-trigger" href="#editCloudCategorieServiceModal"> #}
                                            {#                                            <a href="/modal" data-sideclick-modal-trigger>#}
                                            {#                                                <i id="btnEditModal" class="btn-default fa fa-edit"></i>#}
                                            {#                                            </a>#}
                                            <i id="btnEditModal2" class="btn-default fa fa-edit" data-toggle="modal" data-target="#myModal"></i>
                                            {# </a> #}
                                            &#160;&#160;
                                            <i class="fas fa-list-alt"></i>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
        {#<div class="modal fade" id="emptyModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" data-async data-target="#emptyModal">
            <div class="modal-dialog">
            </div>
        </div>#}
    </div>
    <!-- The Modal -->
    <div class="modal fade" id="myModal">
        <div class="modal-dialog">
            <div class="modal-content">

                <!-- Modal Header -->
                <div class="modal-header" style="height: 50px">
                    <h4 class="modal-title" style="font-size: 16px;">Modification d'une catégorie service</h4>
                    <button type="button" class="close btn-sm" data-dismiss="modal">&times;</button>
                </div>

                <!-- Modal body -->
                <div class="modal-body">
                    Modal body..
                    {{ form_start(form) }}

                    {{ form_widget(form) }}
                    <button type="submit" class="btn btn-success btn-sm float-right">Enregistrer
                    </button>
                    {{ form_end(form) }}
                </div>

                <!-- Modal footer -->
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger btn-sm" data-dismiss="modal">Annuler</button>
                </div>

            </div>
        </div>
    </div>

    <div id="{% block modalId %}base-modal{% endblock %}" class="modal {% block modalEffects %}fade{% endblock %}" role="dialog" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                {% block modalContent %}
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        {% block modalHeader %}{% endblock %}
                    </div>
                    <div class="modal-body">
                        {% block modalBody %}{% endblock %}
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">{{ 'modal.button.close'|trans }}</button>
                        {% block modalFooter %}{% endblock %}
                    </div>
                {% endblock %}
            </div>
        </div>
    </div>
{% endblock %}
