{% extends 'base.html.twig' %}
{% block title %}
    pro6- GRH / Catégorie service
{% endblock %}
{% block  breadcrumb %}
    <li class="breadcrumb-item active">
        Catégorie service
    </li>
{% endblock %}

{% block body_inside %}
    {% include 'cloud_compte/pills/paramComptePills.html.twig' %}
    <br/>
    <button href="{{ path('rares_modal_open_message', {'message': 'info.message'}) }}" class="modal-open" type="button" class="btn btn-secondary">Open Test Modal</button>
    <br/>
    <br/>
    <br/>
    <a href="/modal" class="modal-open-confirm">Open Confirm Modal</a>
    <br/>
    <br/>
    <br/>
    <a class="modal-open" data-modal-id="contact-modal" href="{{ path('contact_show_modal') }}">show modal</a>
    <br/>
    <br/>
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <div class="card card-success">
                    <div class="card-header">
                        Nouveau
                    </div>
                    <div class="card-body">
                        {{ form_start(form) }}

                        {{ form_widget(form) }}
                        <button type="submit" class="btn btn-success swalDefaultSuccess float-right">Enregistrer
                        </button>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
            <div class="col-md-8">
                <div class="card card-secondary">
                    <div class="card-header">
                        Les différentes catégories de service
                    </div>
                    <div class="card-body">
                        {% if listCloudCategorieService %}
                            <table class="table table-bordered table-hover">
                                <thead>
                                <tr>
                                    <th style="width: 3%">N°</th>
                                    <th style="width: 40%">Libellé</th>
                                    <th style="width: 30%">Description</th>
                                    <th style="width: 7%">Action</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for cs in listCloudCategorieService %}
                                    <tr>
                                        <td>{{ num }}</td>
                                        <td>{{ cs.libelle }}</td>
                                        <td>{{ cs.description }}</td>
                                        <td>
                                            {# <a class="waves-effect waves-light btn modal-trigger" href="#editCloudCategorieServiceModal"> #}
                                            <a href="/modal" data-sideclick-modal-trigger>
                                                <i id="btnEditModal" class="btn-default fa fa-edit"></i>
                                            </a>
                                            {#                                            <i id="btnEditModal2" class="btn-default fa fa-edit"></i>#}

                                            {# </a> #}
                                            &#160;&#160;
                                            <i class="fas fa-list-alt"></i>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
        {#<div class="modal fade" id="emptyModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" data-async data-target="#emptyModal">
            <div class="modal-dialog">
            </div>
        </div>#}
    </div>

{% endblock %}
